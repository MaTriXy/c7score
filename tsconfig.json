{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",  
        "declaration": true,
        "sourceMap": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "src/bin/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "repos",
        "output",
        "projects",
        "archive",
        "temp",
    ],
    "ts-node": {
        "esm": true,
        "moduleTypes": {
            "**/*": "esm"
        }
    }
}